---

// IMPORTS ASTRO ATOMS
import Link from "@/atoms/link/index.astro"
import PictureContain from "@/atoms/picture/contain/index.astro"
import PrimaryButton from "@/atoms/button/primary/index.astro"

// GET ASTRO PROPS
const {

    CDN,
    data,
    PROJECT,
    work

} = Astro.props

---
<section class="pb-14">
    <section class="grid md:grid-cols-5 gap-4 md:gap-0">
        {

            work.map( ( value ) => {

                return(
                    <div class="group cursor-pointer space-y-4">
                        <div class="relative h-40 md:h-[580px] w-full bg-cover bg-center bg-no-repeat overflow-hidden" style=`background-image: url(${ CDN + PROJECT + "/" + value.cover })`>
                            <div class="translate-x-60 group-hover:translate-x-24 transition-all duration-300 -rotate-90">
                                <span class="text-white text-6xl font-proxima_nova font-bold w-full text-right">{ value.category }</span>
                            </div>
                            <div class="group-hover:opacity-0 transition-all duration-300 bg-ms_lavender/60 mix-blend-multiply h-full w-full absolute top-0" />
                        </div>
                        <div class="h-12 w-full">
                            <PictureContain
                                alternative_text={ value.title }
                                source={ value.logo[0].file }
                                CDN={ CDN }
                                PROJECT={ PROJECT }
                            />
                        </div>
                    </div>
                )

            })

        }
    </section>
    <div class="flex justify-center pt-10">
        <Link href={ data.button_link } aria_label={ data.button_text }>
            <PrimaryButton>{ data.button_text }</PrimaryButton>
        </Link>
    </div>
</section>
